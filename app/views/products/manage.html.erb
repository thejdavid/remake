  <h2>Manage Products</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Product Title</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
<% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to "edit", edit_product_path(product.id) %> </td>
        <td><%= button_to "delete", {:controller => :products,
      :action => 'destroy', :id => product.id }, :method => :delete %> </td>
      </tr>
<% end %>
    </tbody>
  </table>

